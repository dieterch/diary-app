generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Entry {
  id           Int      @id @default(autoincrement())
  date         DateTime?
  note         String?
  bloodSugar   Float?
  systolic     Int?
  diastolic    Int?
  weight       Float?
  pulse        Int?
  carbs        Float?
  insulinBolus Float?
  insulinBasal Float?
  sportType    String?
  sportMinutes Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String   // hashed
  role     String   @default("user") // "user" | "admin"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
